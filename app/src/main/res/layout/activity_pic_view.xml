<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".PicViewActivity"
        android:orientation="vertical"
        android:layout_gravity="center"
>

    <ProgressBar android:layout_width="match_parent" android:layout_height="wrap_content"
                 android:id="@+id/ps_view"
                 style="?android:progressBarStyleHorizontal"
    />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/tv_process"
              android:gravity="center"
              android:textSize="17sp"
    />

    <ListView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/lv_pic"
    />

</LinearLayout>